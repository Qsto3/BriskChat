@{
    if (Context.Authentication.HttpContext.User.Identity.IsAuthenticated)
    {
        using (Html.BeginForm("Logout", "Auth", null, FormMethod.Post, true, new { @class = "navbar-right", id = "logoutForm" }))
        {

            <button type="submit" class="orginalbutton">Log off</button>

        }
    }
    else
    {
        <a asp-controller="Auth" asp-action="Register" class="header item">Register</a>

        <a class="orginalbutton " asp-controller="Auth" asp-action="Login">Sign in</a>

    }
}