@{
    Layout = "_WebLayout";
}
@model TrollChat.Web.Models.Auth.ResetPasswordViewModel

@using (Html.BeginForm("ResetPassword", "Auth", FormMethod.Post))
{
    <h2>Login</h2>

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button class="btn btn-lg btn-primary btn-info" type="submit" id="btnLogin">Reset password</button>
                </div>
            </div>
        </div>

}