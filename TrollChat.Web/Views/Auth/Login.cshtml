@{
    Layout = "_WebLayout";
}
@model TrollChat.Web.Models.Auth.LoginViewModel

@using (Html.BeginForm("Login", "Auth", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    <h2>Login</h2>

    <div class="ui form">
            <div class="field">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="field">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        <div class="field">
            <div class="col-sm-10 col-sm-offset-2">
                <button class="orginalbutton" type="submit" id="btnLogin">Login</button>
            </div>
    </div>
        </div>
}
    <div >
        <a href="@Url.Action("ResendConfirmationEmail", "Auth")">Resend confirmation email?</a>
    </div>
    <div >
        <a href="@Url.Action("ResetPasswordInitiation", "Auth")">Reset password</a>
    </div>