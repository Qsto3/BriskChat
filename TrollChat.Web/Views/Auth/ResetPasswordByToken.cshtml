@{
    Layout = "_WebLayout";
}

@model TrollChat.Web.Models.Auth.ResetPasswordNewPasswordViewModel

@using (Html.BeginForm("ResetPasswordByToken", "Auth", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.HiddenFor(m=>m.Token);
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Password", required = "required"})
                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "Confirm Password", required = "required"})
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button class="btn btn-lg btn-primary" type="submit" id="btnSetNewPassword">Set New Password</button>
            </div>
        </div>
    </div>
}